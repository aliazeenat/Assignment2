<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ACC1"
    android:backgroundTint="#BCEBF1"
    android:foregroundTint="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="110dp"
        android:editable="false"
        android:fontFamily="@font/allura"
        android:text="Alia Zeenat"
        android:textAlignment="center"
        android:textColor="#00897B"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="112dp"
        android:editable="false"
        android:fontFamily="@font/allura"
        android:text="Bitf18a522"
        android:textAlignment="center"
        android:textColor="#00897B"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/repo"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#00897B"
        android:text="Go to Repository"
        app:layout_constraintBottom_toTopOf="@+id/prac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/prac"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="#00897B"
        android:text="Practice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/exam"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/exam"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="#00897B"
        android:text="Exam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/prac" />
</androidx.constraintlayout.widget.ConstraintLayout>